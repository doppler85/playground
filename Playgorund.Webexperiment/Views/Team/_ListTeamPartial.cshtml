@model IEnumerable<Playground.Model.Team>

<table>
    <tr>
        <th>
            Game
        </th>
        <th>
            Team name
        </th>
        <th></th>
    </tr>

@foreach (var team in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => team.Game.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => team.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Team", new { id=team.CompetitorID}, null) |
                @Html.ActionLink("Details", "Details", "Team", new { id=team.CompetitorID}, null) |
                @Html.ActionLink("Delete", "Delete", "Team", new { id=team.CompetitorID}, null)
            </td>
        </tr>
}
</table>
